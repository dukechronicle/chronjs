@import '../../mixins'

headlines-height = 50px
width = 636px
height = 393px
textHeight = 80px

.slideshow.right
    box-shadow none
    .slides
        height height
        img
            margin-top 0px
.slideshow.vertical
    .headlines
        a.page
            border-bottom 1px solid transparent
            height 41px
            transition border-color 0.25s linear
        a.page:hover, a.page.active
            border-bottom-color #4D90F0


.slideshow
    width width + 6
    border-radius  4px
    black-box-shadow 0.398438 0px 1px 3px

    font-size  0.9em
    font-family  Georgia,"Century Schoolbook","Times New Roman",Times,serif
    padding 0
    margin-bottom 20px


    .slides img
        border-bottom 1px solid #ccc
        width width
        height height
        position absolute
        left 0
        top 0
        margin-bottom textHeight
        z-index 5

    .slides
        background-linear-gradient bottom, whiteSmoke 0%, white 33%
        border-top-left-radius  4px
        border-top-right-radius  4px
        position relative
        width width
        text-align left
        overflow hidden
        height height + textHeight
        border 3px solid white
        //border-color #E5E5E5 #DBDBDB #D2D2D2
        black-box-shadow 0.3 0 1px 3px

        a:hover
            h1
                color #36c

        .text
            margin-top 400px
            margin-left 10px
            position absolute
            h1
                transition color .25s linear
                font-size 1.5em
                line-height 1.1em
                margin-bottom 2px

    .headlines
        display block
        width 100%
        height headlines-height
        text-align center
        background #fff
        *overflow hidden

        -webkit-border-bottom-left-radius  4px
        -webkit-border-bottom-right-radius  4px
        -moz-border-radius-bottomleft  4px
        -moz-border-radius-bottomright  4px

        background -moz-linear-gradient(center bottom,whiteSmoke 0%,white 33%)
        background -webkit-gradient(linear,left bottom,left top,color-stop(0,whiteSmoke),color-stop(.33,white))
        
        div
            width 630px margin 0 auto
        a.page
            cursor pointer
            width 180px
            display block
            float left
            padding 3px 15px 6px 15px
            height headlines-height - (6 * 2)
            color black
            line-height 1.2em
            font-size 1em
            -webkit-transition color linear .2s
            text-shadow 0px 1px 1px white

        a.page:hover
            color #36C
            text-decoration none
        a.page.active
            color #36C
            text-shadow 0px 1px 0px white

        a.page.active:hover
            text-decoration underline
    .caret
        transform rotate(45deg)
        position absolute
        margin-top 55px
        left 330px
        z-index 5
        -webkit-transition -webkit-transform linear 0.4s
        // TODO cross browser compatibility
        b.caret-shadow
            position absolute
            width 10px
            background white
            height 10px
            black-box-shadow 0.3 0 1px 3px
            margin 0 0 0 0px
            z-index 0
        b.caret-white
            position absolute
            width 11px
            background white
            height 11px
            left 1px
            top -1px
            z-index 1


