@import '../../mixins'

link-color = #36c
corner-radius = 4px
container-padding = 3px
border-color-grey = #DDD

body
    .container
        margin-top 0em
        position relative
        font-size 0.8em
        padding-left 0em

        .content-container
            padding container-padding
        a.hover
            display block
            border-right 1px solid transparent
            border-left 1px solid transparent
            transition color .25s linear
            transition border-color .25s linear

            h1, h2, h3, h4, h5, p
                transition color .25s linear
                color black

            p
                color #444
                line-height 1.5em

        a.hover:hover, a.hover.selected
            h1, h2, h3, h4
                color link-color

        a.hover.highlight-left:hover, a.hover.highlight-left.selected
            border-left-color #4D90F0
        a.hover.highlight-right:hover, a.hover.highlight-right.selected
            border-right-color #4D90F0

        a.hover.highlight-bottom
            border-bottom 1px solid transparent
        a.hover.highlight-bottom:hover, a.hover.highlight-bottom.selected
            border-bottom-color #4D90F0


        a.hover.highlight-top
            border-top 1px solid transparent
            margin-top -5px
            padding-top 5px
        a.hover.highlight-top:hover, a.hover.highlight-top.selected
            border-top-color #4D90F0

        a.hover:hover, a.hover.selected
            h1, h2, h3, h4, h5
                color link-color
            p
                //color #333

        a.hover p.author, a.hover p.subhead, a.hover p.tagline
            font-family "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
            font-size 0.7em
            padding-top 0px
            text-transform uppercase

        a.hover
            p.author, p.subhead
                margin-bottom 3px
            span.date
                padding-left 5px
                margin-left 5px
                border-left 1px solid #888

    .rounded
        padding (container-padding - 1) container-padding (container-padding + 1) container-padding

        a.hover.highlight-right
            margin-right container-padding * -2 - 1
        a.hover.highlight-left
            margin-left container-padding * -2 - 1

        h1, h2, h3, h4, h5
            line-height 1.3em

    .rounded-hover
        padding container-padding (container-padding - 1)


    .image-container
        .container
            img
                border-radius corner-radius
                display block
            .content-container
                padding 0px
    .twitter
        .container
            .content-container
                height 55px
                overflow hidden
                .text
                    h3
                        margin-top -3px
                    p
                        font-size 0.9em
                        line-height 1.3em
                        padding-top 2px
                        padding-left 1.25em
                img
                    padding-left container-padding
                    margin-left 3px
                    float right
                    width 55px
                    height 55px


    .breaking
        .rounded
            box-shadow rgba(200,0,0,0.6) 0px 1px 3px

    .featured
        h2
            margin 0px 3px
        .rounded-hover
            padding 0px
            border none

        p.teaser
            color #444
            margin 0px 3px
        img
            border-top-left-radius corner-radius
            border-top-right-radius corner-radius

    block-width = 133px
    block-padding = 15px
    full-block-width = block-width * 2 + block-padding * 2 - 4
    blocks = 6
    block-padding = 15px

    .block-row
        rounded-image()

        container-padding = 12px

        row-width = 980px
        //block-width = (row-width + (block-padding * 2)) / blocks - (block-padding * 2)

        .rounded
            width 972px
            padding 0px
            h2, h3
                font-size 1em
                margin-bottom 0.5em
                //TODO use jquery to auto measure
                height 47px
                margin-top -5px
                line-height 1.2em

            h2
                font-size 1.5em
                line-height 1.3em

            .content-container
                padding container-padding container-padding 0px container-padding
                margin-bottom -1px
        a.hover
            border none
            border-right 0px
            border-left 0px
            padding 0px block-padding
            width block-width
            height 230px + container-padding
            float left

            img
                display block
                width block-width
                margin-bottom 14px

            p.teaser
                height 65px
                margin-top -4px
                font-size .9em
                line-height 1.4em


        a.hover.first
            padding-left 0px

        a.hover.last
            padding-right 0px

    .block-row.large-first
        .list-story.first
            padding-top 0px
            p.teaser
                font-size 1.2em
        .list-story.last
            padding-bottom 0px
        a.hover.first
            width full-block-width
            img
                width full-block-width
                margin-bottom 0px
    .rounded, .rounded-hover
        border-radius corner-radius
        black-box-shadow 0.398438 0px 1px 3px
        background-color white
        background-linear-gradient bottom, whiteSmoke 0%, white 33%
        float left

    a.rounded-hover
        border-left 1px solid transparent
        border-right 1px solid transparent

        h3, h3>*
            transition color 0.25s linear


    a.list-story
        color black
        display block
        padding 4px 0px 4px 2px

    a.list-story.first
        padding-top 2px

    a.list-story.last
        padding-bottom 2px



    a.hover:hover, a.hover.selected
        color link-color
        border-bottom-color #4D90F0
        //background #e9e9e9

        //background transparent -webkit-gradient(linear,left bottom,left top,color-stop(0, rgb(237,237,237)),color-stop(.5, rgb(255,255,255)))
        //background transparent -moz-linear-gradient(center bottom,rgb(237,237,237) 0%,rgb(255,255,255) 50%)      
    
    .vertical-container
        // will be unhidden by vertical align js function
        visibility hidden
        font-size 1em

        
        transform rotate(-90deg)
        white-space nowrap
        display block
        
        float left
       
        transform-origin 0px 100%
        position absolute
        margin-top -14px
        margin-left 1px
        //border-bottom 3px solid #666
        
            
        .vertical
            font-size 0.9em
            color #444
            letter-spacing 1px
            text-shadow 0px 1px 1px white
            text-transform uppercase
            margin-bottom -2px

    .numbered-articles ol li
        list-style decimal outside

    .numbered-articles ol li h2
        margin-left -9px

    .numbered-articles ol
        margin-left 18px
        font-family Georgia,"Century Schoolbook","Times New Roman",Times,serif


    .container.image
        img
            display block
        .caption
            float right
            padding-top 3px
            color #444

    // Search Results Container, also used on author pages
    .search-result
        display block
        width 596px
        float left
        margin-bottom 10px
        padding-left 8px
        padding-right 8px

        h3
            font-size 1.2em
            color black

        .date
            margin-bottom 5px
            margin-top -3px
        .teaser, .date
            color #444
            font-size 0.9em
        .sep
            font-size 0.7em
            margin-left 4px
            margin-right 4px
    .search-result:hover
        h3, h3>*
            color #36c

.lighten
    img
        opacity 0.8
        transition opacity 0.25s linear

.lighten a.hover, .lighten a.rounded-hover
    :hover
        img
            opacity 1
        h3
            color #36c
