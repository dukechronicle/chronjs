@import '../../mixins'

#people
    h1
        line-height 1
        font-size 1.5em
    .dukeAffiliation
        font-size .9em
        margin 0
    .tagline
        margin-top 6px
        font-style italic
        margin-bottom 6px
    .result
        display block
        width 600px
        float left
        margin-bottom 10px
        padding-left 8px

        a
            color black
            transition 0.25s linear color
        a:hover
            color #36c

        h3
            font-size 1em
            color black
        

        .date
            margin-bottom 5px
            margin-top -3px
        .teaser, .date
            color #444
            font-size 0.9em

    .sep
        font-size 0.7em
        margin-left 4px
        margin-right 4px


    .sidebar
        float right
        width 306px
        .rounded
            width 300px
            font-size 1.1em
            a
                color black
            a:hover
                color #36C
        .content-container
            padding 0px
            h2
                margin-top 4px
                margin-bottom 4px
            h2, p.teaser
                padding 0px 3px
            img
                width 300px
                height 120px
                border-radius 4px
