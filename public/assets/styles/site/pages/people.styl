@import '../../mixins'

#people
    .authorInfo
        margin-bottom 10px
        .rounded
            width 972px
            padding 0
            font-size 1.2em
            .content-container
                padding 8px
                img
                    float left
                    margin-right 10px
                    border-radius 4px
                h1
                    line-height 1
                    font-size 1.6em
                .dukeAffiliation
                    font-size .9em
                    margin 0
                .tagline
                    margin-top 6px
                    font-style italic
                .bio
                    margin-top 5px
                    font-size .9em
                    color #444
                    p
                        margin-bottom 10px
    .result
        display block
        width 596px
        float left
        margin-bottom 20px
        padding-left 8px
        padding-right 8px

        h3
            font-size 1.4em
            color black

        .date
            margin-bottom 5px
            margin-top -3px
        .teaser, .date
            color #444
            font-size 0.9em
    .result:hover
        h3, h3>*
            color #36c

    .sep
        font-size 0.7em
        margin-left 4px
        margin-right 4px


    .sidebar
        float right
        width 306px
        .rounded
            width 300px
            font-size 1.1em
            a
                color black
            a:hover
                color #36C
        .content-container
            padding 0px
            h2
                margin-top 4px
                margin-bottom 4px
            h2, p.teaser
                padding 0px 3px
            img
                width 300px
                height 120px
                border-radius 4px
