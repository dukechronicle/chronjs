h1 Add Author Info
if (typeof doc !== 'undefined') 
    form(action='/admin/author', method='POST')
        p
            label(for='name') Name:
            input#name(type='text', value=doc['name'], id='authorName', name="name")
            input(type='button', class='btn', value='Find Author', id='findAuthorButton')
        p
            label(for='bio') Bio:
            textarea#bio(rows=20, cols=30, name="bio")
                !{doc['bio']}
        p
            input(type='submit', class='btn', value='Save')
else
    p
        label(for='name') Name:
        input#name(type='text', id='authorName', name='name')
        input(type='button', class='btn', value='Find Author', id='findAuthorButton')