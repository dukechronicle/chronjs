h1 Add Author Info
if (typeof doc !== 'undefined') 
    form(action='/admin/author', method='POST')
        p
            label(for='name') Name:
            input#name(type='text', value=doc['name'], name="name")
        p
            label(for='affiliation') Year / Affil.:
            input#affiliation(type='text', value=doc['affiliation'], name="affiliation")
        p
            label(for='tagline') Tagline:
            input#tagline(type='text', value=doc['tagline'], name="tagline")
        p
            label(for='currentColumnist') Current Columnist:
            input#tagline(type='checkbox', checked=doc['currentColumnist'], name="currentColumnist")
        p
            label(for='bio') Bio:
            textarea#bio(rows=20, cols=30, name="bio")
                !{doc['bio']}
        input(type="hidden", name='id', value=doc._id);
        !=partial("admin/container/images")
        p
            input(type='submit', class='btn', value='Save')
else
    form(action='/admin/author', method='GET')
        p
            label(for='name') Name:
            input#name(type='text', name='name')
            input(type='submit', class='btn', value='Find Author')
