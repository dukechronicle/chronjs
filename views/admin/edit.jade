h1 Editing a Document
form(action='/admin/edit', method='POST')
    p
        label(for='title') Title:
        input#title(type='text', name='doc[title]', value=doc.title)
    p
        label(for='author') Author:
        input#author(type='text', name='doc[author]', value=doc.author)
    p
        label(for='teaser') Teaser:
        textarea#teaser(rows=3, cols=50, name='doc[teaser]', value)
            #{doc.teaser}
    p
        label(for='body') Body:
        textarea#body(rows=5, cols=50, name='doc[body]', value)
            #{doc.body}

    input(type="hidden", name='doc[id]', value=doc._id);
    p
        a(href='/article/' + url + '/image') Add images
    - if(images)
        p
        table(border=1)
            - each image, imageType in images
                tr
                    td #{imageType}
                    td
                        img(src=image.url)
                    td
                        a(href='/article/' + url + '/edit/?deleteImage=' + imageType) delete
    p
        input(type='submit', value='Submit')
