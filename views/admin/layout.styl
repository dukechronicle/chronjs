@import '../mixins'

#layout
    width 400px
    float left

    .container
        width 300px
        border 1px solid black
        padding 10px
        padding-bottom 60px

    .container.over
        background-color #ccc

.story
    font-size .8em
    border 1px solid black
    margin 5px
    padding 5px

.story.over
    background-color #ccc

#sidebar
    width 200px
    float right

    .story.exists
        opacity .4

.fixed-container
    position fixed
    height 700px
    overflow scroll
    right 10px
