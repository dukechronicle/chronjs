h2 Frontpage Layout

#layout
	<h2>Slideshow</h2>
	#slideshow.container(data-groupName='Slideshow')
		- if (model.Slideshow)
			- each story, id in model.Slideshow
				.story(draggable='true', id='#{story._id}')
					#{story.title}
	
