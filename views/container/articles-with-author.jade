.container.clearfix.articles-with-author
    .vertical-container
        h2.vertical #{title}

    .rounded
        .content-container
            - each story in stories
                li
                    h2
                        a.list-story.hover.highlight-right(href='#{story.url || ('article/' + story.urls[story.urls.length-1])}', class='#{story.cssClass}')
                            #{story.title}
                            - if (story.authors)
                                p.author
                                    span.author #{story.authors}
                                    - if (story.date)
                                        span.date #{story.date}
