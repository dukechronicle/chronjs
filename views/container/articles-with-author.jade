.container.clearfix.articles-with-author
    .vertical-container
        h2.vertical #{title}

    .rounded
        .content-container
            - each story in stories
                h2
                    a.list-story.hover.highlight-right(href='#{story.url || story.urls[0]}', class='#{story.cssClass}')
                        #{story.title}
                        - if (story.authors)
                            p.author #{story.authors[0]}
