.container.clearfix.block-row.large-first
    .vertical-container
        h2.vertical #{title}

    .rounded
        .content-container.clearfix
            - each story, index in stories
                a.list-story.hover.highlight-bottom(href='#{story.url}', class='#{story.cssClass}')
                    - if (story.cssClass !== "first")
                        h3 #{story.title}

                        - if (story.images && story.images.ThumbRect)
                            img(src="#{story.images.ThumbRect.url}")
                        p.teaser
                            #{story.teaser}
                    - else
                        h2 #{story.title}
                        - if (story.images && story.images.ThumbRectL)
                            img(src=story.images.ThumbRectL.url)
                        else
                            p.teaser #{story.teaser}




