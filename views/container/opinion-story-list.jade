.container.clearfix
    .vertical-container
        if (typeof title != 'undefined')
                h2.vertical #{title}
            else
                h2.vertical &nbsp;

    .rounded
        .content-container
            h2 #{name}
            - each story in stories
                a.hover.highlight-right.first.teaser(href='#{story.url}')
                    h2 #{story.title}
                    p #{story.teaser}