- if(query == null) var query = ""
- query = query.replace(/-/g, ' ');

.div
    img(src='/images/header-overlay.png', id='header-overlay', width='100px', height='122px')

#header-top
    .content
        h1
            a(href='/') The Chronicle
        p.tagline The Independent Daily at Duke University
    .social-media
        .inner
            .icons
                a(href='http://www.facebook.com/dukechronicle')
                    img.first(src='/images/icons/facebook.png')
                a(href='http://twitter.com/dukechronicle')
                    img(src='/images/icons/twitter.png')
                a(href='http://youtube.com/user/DukeChronicle')
                    img(src='/images/icons/youtube.png')
                a(href='http://foursquare.com/dukechronicle')
                    img(src='/images/icons/foursquare.png')
                a(href='http://fusion.google.com/add?source=atgs&feedurl=http%3A//dukechronicle.com/feed/all')
                    img(src='/images/icons/rss.png')
                a(href='/newsletter')
                    img.last(src='/images/icons/email.png')

    .leaderboard
       !=partial('ad/full-banner-raw')




#header-bottom
    nav#nav.clearfix
        h2.first
            a(href='/news') News
        h2
            a(href='/sports') Sports
        h2
            a(href='/opinion') Opinion
        h2
            a(href='/recess') Recess
        h2
            a(href='/towerview') Towerview
        //h2
        //    a(href='/multimedia') Multimedia
        h2.last
            a(href='http://chronicleblogs.com') Blogs

    .advertising.advertising-links(style='float: right')
        a(href='/subscribe') Print Sub
        a(href='/advertising') Advertising &nbsp;
        a(href='http://dukechronicle.campusave.com/') Classifieds &nbsp;
        a(href='http://chroniclehousing.com/') Housing




    form#search-box(action='/search/', method='GET')
        input(type='search', name='search', placeholder='Search archives', results='5', value=query)
