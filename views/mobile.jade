include mixins/layout-helpers

!!! 5
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, minimum-scale=1, maximum-scale=1')
    mixin stylesheet("mobile")
                
    script(src='http://code.jquery.com/jquery-1.7.1.min.js')
    script(src='http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.js')
    script(src='/js/mobile.js?v=8')

    script(type='text/javascript')
      initMobileOptions();
  body
    #ArticleList(data-role='page', articlelistcontainer='true', url='news', data-add-back-btn='false')
      div(data-role='header', data-position='fixed')
        h1#HEADER_TITLE The Chronicle
        form(id="searchBox")
            label(for="search-basic")
            input(id="searchInput", type="search", name="search", value="", placeholder="Search")
      #ArticleListContent(data-role='content')
        ul#ARTICLE_LIST(data-role='listview')
      div(data-role='footer', data-position='fixed')
        div(data-role='navbar')
          ul
            li
              a(href='javascript:getArticleList(\'All\', \'The Chronicle\', false)') All
            li
              a(href='javascript:getSectionList()') Sections
            li
              a(href='javascript:showFullSite()') Full Site
    #Article(data-role='page', articlecontainer='true', url='Article', data-add-back-btn='true', data-back-btn-text='Back')
      div(data-role='header')
        h1 The Chronicle
      #ARTICLE_CONTENT(data-role='content')
      script(src='/js/disqus.js?v=5', type='text/javascript')
      #disqus_thread
      div(data-role='footer', data-position='fixed')
    #error(data-role='page', articlecontainer='true', url='Article', data-add-back-btn='true', data-back-btn-text='Back')
      div(data-role='header')
        h1 Error
      #ERROR_MESSAGE(data-role='content')
        | An error has occured, click back to return to the previous page.
    
    script(type='text/javascript')
      beginMobile();        
