html
    head
        link(href='http://fonts.googleapis.com/css?family=Karla', rel='stylesheet', type='text/css')
        script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js', type='text/javascript')
        script(src='https://raw.github.com/monkeecreate/jquery.simpleWeather/master/jquery.simpleWeather.js', type='text/javascript')
        script(src='/scripts/qduke/qduke.js', type='text/javascript')
        link(rel='stylesheet', type='text/css', href='/styles/qduke.css')
        title qDuke.com
    body
        div#shell
            div#header
                div#logo
                    p#title
                        a(href='http://qduke.com') q
                            span.strong Duke
                            | .com
                    p#subtitle presented by 
                        a#chrontitle(href='http://dukechronicle.com') The Chronicle
            section#info
                ul.button_bar.default_lightgrey.infobar.clearfix
                    li
                        a#time(href='http://google.com/calendar') 
                            div.outerContainer
                                div.innerContainer
                                    div.element Calendar
                    li
                        a#weather(href='http://www.weather.com/weather/right-now/Durham+NC+27708') 
                            div.outerContainer
                                div.innerContainer
                                    div.element Weather
                    li
                        a#webmail(href='https://webmail.duke.edu') 
                            div.outerContainer
                                div.innerContainer
                                    div.element Webmail
                    li
                        a#gmail(href='http://gmail.com')
                            div.outerContainer
                                div.innerContainer
                                    div.element Gmail
                    li
                        a#faceboook(href='http://facebook.com')
                            div.outerContainer
                                div.innerContainer
                                    div.element Facebook
                ul.button_bar.clearfix
                    li.button_blue
                        a(href='http://www.dukechronicle.com')
                            div.outerContainer
                                div.innerContainer
                                    div.element The Chronicle
                    li.button_arrownarrow.button_grey
                            div.outerContainer
                                div.innerContainer
                                    div.element &laquo;
                    li.newsbox.button_grey
                            div.outerContainer
                                div.innerContainer
                                    div.element Headline: ‘New Tailgating’ to debut in a field
                    li.button_arrownarrow.button_grey
                            div.outerContainer
                                div.innerContainer
                                    div.element &raquo;
            section#links
                ul.button_bar.clearfix
                    li.button_doublewide.button_grey.noHover#search
                            div.outerContainer
                                div.innerContainer
                                    div.element
                                        input(name='query', type='text', style='background:transparent', onkeydown='searchOnEnter(event)')
                    li.button_blue
                        button(type="submit", onclick='search("Google")')
                            div.outerContainer
                                div.innerContainer
                                    div.element Google
                    li.button_blue
                        button(type='submit', onclick='search("WolframAlpha")')
                            div.outerContainer
                                div.innerContainer
                                    div.element WolframAlpha
                    li.button_blue
                        button(type='submit', onclick='search("Duke")')
                            div.outerContainer
                                div.innerContainer
                                    div.element Duke
                - var linkRows = Math.ceil(links.length/5)
                ul.button_bar.button_bar_tall.default_lightblue.clearfix
                    -for (var i = 0; i < 5; i++)
                        li 
                            a(href=links[i].url) 
                                div.outerContainer
                                    div.innerContainer
                                        div.element #{links[i].title}
                - for (var row = 1; row < linkRows; row++)
                    ul.button_bar.default_lightblue.clearfix
                        -for (var i = row*5; i < row*5+5; i++)
                            li 
                                a(href=links[i].url) 
                                    div.outerContainer
                                        div.innerContainer
                                            div.element #{links[i].title}
            section#ads
                - var adRows = Math.ceil(ads.length/5)
                - for (var row = 0; row < adRows; row++)
                    ul.button_bar.default_lightgrey.clearfix
                        -for (var i = row*5; i < row*5+5; i++)
                            li 
                                a(href=ads[i].url) 
                                    div.outerContainer
                                        div.innerContainer
                                            div.element #{ads[i].title}
                            - if (i==4)
                                div.vertical-container
                                    li.button_lightblue
                                        a.vertical(href='http://dukechronicle.com/page/advertising') 
                                            div.outerContainer
                                                div.innerContainer
                                                    div.element Sponsored
            div#footer
                p &copy; 2012 
                    a(href='http://dukechronicle.com') The Chronicle 
                    |
                    a(href='http://dukechronicle.com/page/advertising') Advertising 
                    |
                    a(href='http://dukechronicle.com/page/contact') Contact 
                script(type='text/javascript')
                    doMagic()