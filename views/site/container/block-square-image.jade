.row.row-square
    - if (typeof title != "undefined")
        .vertical-container
            .vertical #{title}

    .rounded
        .content-container
            a.clearfix.hover.highlight-right(href=story.url)
                - if (story.images && story.images.ThumbSquareM)
                    img.left(src=story.images.ThumbSquareM.url)
                .story.right
                    h4.title #{story.title}
                    p.teaser #{story.teaser}
