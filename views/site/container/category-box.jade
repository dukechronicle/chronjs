include container-helpers

.category-box.clearfix
    mixin vertical-label
    .category-list
        .rounded
            .content-container
                - each category, index in categories
                    a.hover.highlight-left(data-index=index, href="#")
                        h2 #{category.name}
    .category-articles
        - each category, index in categories
            .rounded(class="category-#{index}")
                block category
                    p #{category.name}
