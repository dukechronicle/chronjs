.content-container
    .columnist-info.clearfix
        - if (typeof images != 'undefined' && typeof images.ThumbSquareM != 'undefined')
            img.headshot(src=images.ThumbSquareM.url)
        - if (name)
            h3.name
                | #{name}&nbsp;
                - if (twitter)
                    a.twitter(href="http://twitter.com/#{twitter}") @#{twitter}
        - if (affiliation)
            p.year #{affiliation}
        - if (tagline)
            p.tagline #{tagline}

    - each story in stories
        a.hover.highlight-right.first.teaser(href='#{story.url}')
            h2 #{story.title}
            p.date #{story.date}
            p #{story.teaser}
