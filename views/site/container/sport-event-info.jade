include container-helpers

mixin vertical-label
.rounded
  .content-container.sport-event-info
    .game-stats.timer(data-starttime=info.date, data-selector=info.scoreSelector)
      p.label
      p.value

    .teams
      img.logo(src=info.mainTeam.logo)
      span.separator= information.homeGame ? 'vs' : '@'
      img.logo(src=info.opposingTeam.logo)

    .event-info
      p
        span.label Where
        span= info.location
      p
        span.label Date
        span.local-time(data-date=info.date, data-format='dddd, mmmm d, yyyy')= info.displayDate
      p
        span.label Time
        span.local-time(data-date=info.date, data-format='h:MM Z')= info.displayTime
      p
        span.label TV Channel/Radio
        span= info.channel

    p For live-blog updates of the game, head over to 
      a(href="http://bluezone.dukechronicle.com") The Blue Zone
      | .