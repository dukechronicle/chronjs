extends layout

block content
    #page
        .content-container.rounded.clearfix
            .description
                - if(typeof action == "undefined")
                    h2 Subscribe to our daily newsletter
                    p Receive an email containing the latest news from each Chronicle issue!
                - else if(action == "subscribe")
                    h2 Thank You for Subscribing!
                    p You should be receiving an email at #{email} to confirm your subscription.
                - else
                    h2 We're Sorry to See You Go!
                    p You should no longer receive our newsletter at #{email}.

            br
            .span-4
                form.subscribe.inline.clearfix(method="post", action="")
                    input.left(type="text", name="email", placeholder='Your email address')
                    input(type="hidden", name="action", value="subscribe")
                    input.right(type="submit", value="Subscribe")

                form.unsubscribe.inline.clearfix(method="post", action="")
                    input.left(type="text", name="email", placeholder='Your email address')
                    input(type="hidden", name="action", value="unsubscribe")
                    input.right(type="submit", value="Unsubscribe")
