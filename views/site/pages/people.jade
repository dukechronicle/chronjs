script(type='text/javascript')
    CHRONICLE.onload.push(function () {
        scrollLoad("/api/staff/#{name}");
    });

#people
    if (authorInfo)
        h1 #{authorInfo.name}
        .sidebar.authorInfo
            .container.clearfix
                .vertical-container
                    h2.vertical Profile
                .rounded
                    .content-container
                        if (authorInfo.images && authorInfo.images.StaffHeadshot)
                            img(src=authorInfo.images.StaffHeadshot.url)
                        .author-inner-container
                            h1 #{authorInfo.name}
                            .affiliation #{authorInfo.affiliation}
                            .tagline #{authorInfo.tagline}
                            .bio !{authorInfo.renderedBio}
    else
        h1 #{name}

    .main
        .authors-articles
            .rounded.result
                for doc in docs
                    .document
                        h3
                            a.title.url(href=doc.url) #{doc.title}
                        .date #{doc.date}
            - if(docs.length == 0)
                div No articles found
                div#loadImage(style="height: 300px;", data-key="2")
                    img(src='http://d2sug25c5hnh7r.cloudfront.net/images/loading.gif', style="display: block; margin-left: auto; margin-right: auto")