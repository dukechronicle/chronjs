extends layout

block content
    #section
        .span-8
            - each doc in docs
                .rounded.document
                    a.hover.url(href=doc.url)
                        .content-container
                            h3.title!= doc.title
                            .dateline.subtitle
                                span.date!= doc.date
                                span.author!= doc.authors.join(", ")
                            p.teaser!= doc.teaser

            - if (docs.length == 0)
                div No articles found
            - else
                #loadImage(data-key=JSON.stringify(next), data-url="/api/section/#{taxonomyPath}")

        .span-4.last
            - if (typeof popular != 'undefined' && popular.length > 0)
                #popular.title-small!=partial('../container/story-list/numbered', {title: "Popular", stories: popular})
            .lighten!=partial('../container/ad/medium-rect', { title: "Advertisement" })
            !=partial('../container/facebook')
            .lighten!=partial('../container/ad/blog', { title: "Advertisement" })