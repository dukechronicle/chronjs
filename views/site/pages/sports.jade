extends layout

block content
    #sports
        !=partial('../layout/subnav', {subsections: subsections})

        #top.clearfix
          .span-8
            if (model.Slideshow)
                !=partial('../container/slideshow', {stories: model.Slideshow})
          .span-4.last
            !=partial('../container/ad/medium-rect', {title: "Advertisement"})
            #events.title-small!=partial('../container/story-list', {title: "Recent Games", stories: model.Events})

        #bottom.clearfix
            .span-4
                if (model.Blog)
                    #blog.title-medium!=partial('../container/story-list/image', {locals: {title: "The Blue Zone", image: staticCdn + "/img/blogs/sportsblog-banner.jpg", imageHref:'http://sports.chronicleblogs.com', stories:model.Blog}})

            .span-8.last.clearfix
                - if (model.Stories)
                    #middle.clearfix
                        .span-4
                            - each story, index in model.Stories
                                - if (index % 2 == 0)
                                    !=partial('../container/block/thumbnail', {story: story, tax: true})
                        .span-4.last
                            - each story, index in model.Stories
                                - if (index % 2 == 1)
                                    !=partial('../container/block/thumbnail', {story: story, tax: true})
                !=partial('../container/row/multimedia', {title: "Multimedia", multimedia: model.multimedia.Sports})
