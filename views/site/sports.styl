page-width = 972px
link-color = #36c
container-padding = 4px
top-content-width =  642px

transition()
    -webkit-transition arguments
    -moz-transition arguments
    -o-transition arguments
    transition arguments

container-vertical-spacing = 23px

.nav
    li:hover .subnav
        left 0px
    li:hover h2 a
        color #36c
    .subnav
        padding-top 20px
        clear both
        position absolute
        left -9999px
    h2
        font-size 1.2em



body section > #sports
    margin-top 1em
    rounded-image()
        img
            border-radius 4px
            -webkit-box-shadow 0px 0px 4px #999
            -webkit-transition box-shadow 0.25s linear
        a.hover:hover img
            -webkit-box-shadow 0px 0px 4px black

    top-content-full()
        width top-content-width
        .rounded
            width (top-content-width - (container-padding * 2))

            
    width = 636px
    right-width = 330px
    height = 393px

    shadow(opacity, height, width, offset)
        -webkit-box-shadow rgba(0, 0, 0, opacity) height width offset
        -moz-box-shadow rgba(0, 0, 0, opacity) height width offset
        box-shadow rgba(0, 0, 0, opacity) height width offset



    .top
        margin-bottom 5px

        .slideshow-wrapper.right-select > .slideshow
            width width + 6 + right-width
            position relative
            .slides img
                width width
                border-radius 4px

            .slides
                border-radius 4px
                width width
                float right

            .headlines
                 float left
                 width right-width

                 height height + 6px
                 display block
                 background transparent


                 div
                     width 630px margin 0 auto
                 a.page
                     padding-left = 3px
                     padding-right = 8px
                     margin = 20px + padding-left + padding-right
                     
                     text-align left
                     cursor pointer
                     width right-width - margin
                     display inline-block
                     margin 0px
                     margin-bottom 13px
                     padding-right padding-right
                     padding-top 3px
                     font-size 1.2em

                     padding-left padding-left
                     height 115px
                     color #444
                     line-height 1.3em

                     text-shadow 0px 1px 1px white
                     float left
                     transition(border-right-color, .25s, linear)

                     h2
                        font-size 1.2em
                        line-height 1.2em
                        margin-bottom 8px

                     p.teaser
                        font-size 0.85em
                        line-height 1.2em
                        color #444
                     img
                        border-radius 4px
                        height 118px
                        width 118px
                        float left
                        margin-right 10px

                 a.page.last
                    margin-bottom 0px

                 a.page:hover
                     color black
                     text-decoration none
                 a.page.active
                     border-right-color #4D90F0

                     h2
                        color #36C

                 a.page.active:hover
                     h2
                        text-decoration underline

                 a.page.rounded
                     box-shadow rgba(0,0,0,0.30) 0 1px 3px
                     background -webkit-gradient(linear, left bottom, left top, from(#EDEDED), to(white))


