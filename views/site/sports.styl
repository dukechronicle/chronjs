page-width = 972px
link-color = #36c
container-padding = 4px
top-content-width =  642px

transition()
    -webkit-transition arguments
    -moz-transition arguments
    -o-transition arguments
    transition arguments

container-vertical-spacing = 23px

body section > .nav
    position relative
    z-index 2
    clear both
    h2
        float left
        a
            letter-spacing 1px
            text-shadow 0px 1px 0px white
            //border-bottom 1px solid transparent
            font-size 0.7em
            text-transform uppercase
            color #333
            display block
            padding-left 15px
            padding-right 11px
            //padding-bottom 1px
            margin-bottom 16px
            margin-top -16px
            transition(color, .25s, linear)
        a:hover, a.active
            color #999

    h2.first a
        padding-left 3px

    a
        color #333

body section > #sports
    rounded-image()
        img
            border-radius 4px
            -webkit-box-shadow 0px 0px 4px #999
            -webkit-transition box-shadow 0.25s linear
        a.hover:hover img
            -webkit-box-shadow 0px 0px 4px black

    top-content-full()
        width top-content-width
        .rounded
            width (top-content-width - (container-padding * 2))

            
    width = 636px
    right-width = 330px
    height = 393px

    shadow(opacity, height, width, offset)
        -webkit-box-shadow rgba(0, 0, 0, opacity) height width offset
        -moz-box-shadow rgba(0, 0, 0, opacity) height width offset
        box-shadow rgba(0, 0, 0, opacity) height width offset

    .top
        margin-bottom 20px

        .slideshow-wrapper.right-select > .slideshow
            width width + 6 + right-width

            .slides img
                width width
                border-radius 4px

            .slides
                border-radius 4px
                width width
                float right

            .headlines
                 float left
                 width right-width

                 height height + 6px
                 display block
                 background transparent


                 div
                     width 630px margin 0 auto
                 a.page
                     padding-left = 3px
                     padding-right = 8px
                     margin = 19px + padding-left + padding-right

                     text-align left
                     cursor pointer
                     width right-width - margin
                     display inline-block
                     margin 0px
                     margin-bottom 13px
                     padding-right padding-right
                     padding-top 3px
                     font-size 1.2em

                     padding-left padding-left
                     height 115px
                     color #444
                     line-height 1.3em

                     text-shadow 0px 1px 1px white
                     float left

                     h2
                        font-size 1.2em
                        line-height 1.2em
                        margin-bottom 8px

                     p.teaser
                        font-size 0.85em
                        line-height 1.2em
                        color #444
                     img
                        border-radius 4px
                        height 118px
                        width 118px
                        float left
                        margin-right 10px

                 a.page.last
                    margin-bottom 0px

                 a.page:hover
                     color black
                     text-decoration none
                 a.page.active
                     border-right-color #4D90F0

                     h2
                        color #36C

                 a.page.active:hover
                     h2
                        text-decoration underline

                 a.page.rounded
                     box-shadow rgba(0,0,0,0.30) 0 1px 3px
                     background -webkit-gradient(linear, left bottom, left top, from(#EDEDED), to(white))


    .middle
        margin-bottom 6px
        .left
            .container .rounded
                width 305px
                height 297px

                h2
                    font-size 1em
                    margin-bottom 10px
        .right
            .column.first
                margin-right 14px
            .column
                float left
                .container.row
                    width 314px
                    margin-bottom 9px

                    .rounded-hover
                        padding 0px
                        height 95px

                        :hover
                            h2
                                color link-color
                    img
                        border-radius 4px
                        width 89px
                        height 89px
                        float left
                        margin-right 10px

                    h2
                        transition(color, .25s, linear)
                        font-size 1em
                        color black
                        line-height 1.2em
                        margin-left 89px + 10px
                        margin-bottom 5px

                    p
                        color #444
                        font-size 0.9em
                        line-height 1.2em
                        margin-left 99px

    .sport-block
        width 311px
        float left
        margin-right 19px

    .sport-block .rounded-hover
        width 305px
        height 305px


    
    .last > .sport-block
        margin-right 0px

    .bottom
        .row
            margin-bottom 6px
        .row.last
            margin-bottom 0px

