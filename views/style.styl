        background-position 2px 1px
        border-radius 10px
        border 1px inset
        width 120px
        font-size 12px
        padding-left 20px


.leaderboard
    float right
    margin-top 1px
    margin-bottom 3px
    padding-right 7px
    //border-left 1px solid #ddd


    img
        border-radius 5px
        display block
        box-shadow 0px 0px 3px #CCC
        opacity 0.8
        transition opacity 0.25s linear

    a:hover img
