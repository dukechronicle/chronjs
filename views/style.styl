transition()
    -webkit-transition arguments
    -moz-transition arguments
    -o-transition arguments
    transition arguments

@font-face
    font-family 'didot'
    src url('css/fonts/didot.eot')
    src local('â˜º'), url('css/fonts/didot.woff') format('woff'), url('css/fonts/didot.ttf') format('truetype'), url('css/fonts/didot.svg') format('svg')
    font-weight normal
    font-style normal

/* For modern browsers */
.clearfix:before, .clearfix:after
    content ""
    display table

.clearfix:after
    clear both


/* For IE 6/7 (trigger hasLayout) */
.clearfix
    zoom 1

.left
    float left

.right
    float right

/* fixes extra space under embeds */
iframe, object
    display block

article, aside, details, figcaption, figure, footer, header, hgroup, nav, section
    display block
audio, canvas, video
    display inline-block
    *display inline
    *zoom 1
audio:not([controls])
    display none
[hidden]
    display none


html, body
    width 100%
    height 100%
    background bg-color url('images/bg.jpg') repeat-x

body
    font-family skolar, "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
    a
        text-decoration none
        color link-color
    
        *
            color text-color
    
    h1, h2, h3, h4, h5, h6
        font-family skolar, Georgia,"Century Schoolbook","Times New Roman",Times,serif
            

    
    #shell
        margin 0px auto
        width 972px
    
    header, section, footer
        width 972px


    header
        position relative
        
    #header-overlay
        position absolute
        z-index 0
        left 50px
        top 0px

    #header-top
        height 96px
        //background-color #003564
        //box-shadow 0 1px 3px rgba(0,0,0,.4);
        //border-bottom 2px solid white
        border-bottom-right-radius 5px
        border-bottom-left-radius 5px
        h1
            position relative
            z-index 2
            margin-top 10px
            font-weight bold
            float left
            font-size 1.2em
            line-height 2em
            margin-bottom -3px
            a
                color #111
                font-family didot
                font-size 2.3em
                font-weight normal
                letter-spacing -1px
                padding-left 0px
                text-shadow: 0px 1px 1px white
                -webkit-transition text-shadow .2s linear
                -moz-transition text-shadow .2s linear
                transition(color, .25s, linear)
            a:hover
                color #999
    #header-bottom
        nav
            position relative
            z-index 2
            clear both
            width 636px
            h2
                float left

                a
                    letter-spacing 1px
                    text-shadow 0px 1px 0px white
                    //border-bottom 1px solid transparent
                    font-size 0.8em
                    text-transform uppercase
                    color #333
                    display block
                    padding-left 15px
                    padding-right 11px
                    //padding-bottom 1px
                    transition(color, .25s, linear)
                a:hover, a.active
                    color #999

            h2.first a
                padding-left 3px
            
            a
                color #333
    section
