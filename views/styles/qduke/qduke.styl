@import '../mixins'

body
	background-color #eee
	color white
	font-family 'PT Sans', sans-serif
	a:hover, a.selected
		color #09F
	a.box, .rowAds a, a.dukealert-alertLink
		cursor pointer
	a.box:hover, .rowAds a:hover, a.dukealert-alertLink:hover, a.selected
		background #09F
		color white
	#wrap
		width 915px
		margin 20px auto 0 auto
	.box, .rowAds a, .dukealert-alertLink, .dukealert-description
		background #666
		text-align center
		float left
		width 180px
		margin 0 3px 3px 0
		position relative
		overflow hidden
		box-shadow 1px 1px 5px #ccc
	.duke-alert
		.dukealert-alertLink
			height 60px
			font-size 1.3em
			line-height 2.8em
			padding 0 25px
			:before
				content " DukeALERT "
		.dukealert-standardHeadline
			display none
		.dukealert-description
			height 60px
			font-size .9em
			line-height 1em
			padding 8px
			width (180*4+3*3)px
			a
				color #09F
	.duke-alert-lev1
		.dukealert-alertLink
			background #AD1E17
	.duke-alert-lev2
		.dukealert-alertLink
			background #F0A21E
	.duke-alert-0
		display none
	.rowHead
		.box
			background #069
			height 60px
			font-size 1.3em
			line-height 2.8em
		.boxLogo
			background #555
			font-size 2em
			line-height 1.7em
			em
				font-style italic
	.rowNews
		.box
			height 120px
			background black
			img
				float left
				display inline
				width 186px
				height 133px
			.caption
				position absolute
				bottom 0
				left 0
				width 100%
				background black
				opacity .8
				.txt
					font-size .9em
					line-height 1em
					margin 5px
			.captionTop
				top 0
				bottom auto
				width auto
				opacity .95
				background #069
				border-radius 0 0 4px 0
		.boxStories
			a.box:hover:before
				content ""
				display block
				position absolute
				top 0
				bottom 0
				left 0
				right 0
				opacity .7
				background #09F
			a:hover
				.caption
					background #09F
		.box.breaking
			//border 3px solid rgba(200, 0, 0, .9);
			//box-shadow 1px 1px 5px #c80000;
			.captionTop
				background #c80000
		.boxChron
			background #069
			font-size 1.5em
			line-height 4.8em
		a.boxEmpty
			background #b5b5b5 url("/img/qduke/loading.gif") no-repeat center center
	.rowSearch
		.boxSearch
			height 59px
			cursor text
			width (180*3 + 3*2)px
			background #b5b5b5 url("/img/qduke/search.gif") no-repeat 10px center
			input
				padding 0 0 0 50px
				height 100%
				width 100%
				border none
				font-size 25px
				background #069
		.boxButton
			font-size 1.1em
			line-height 1.6em
			height 28px
			background #069
	.menu
		color #666
		.box
			font-size 1.2em
			line-height 1.4em
			background none
			box-shadow none
			margin-right 0
			height 30px
			border 3px solid #b5b5b5
		span.spacer
			height 30px
			float left
			border-bottom 3px solid #b5b5b5
		.box.selectedTab
			border-bottom none
			color #666
			background none
			cursor default
		a.box.selectedTab:hover//, .dukealert-alertLink:hover
			background none
			color #666
			cursor default
	#tabFrame
		.tabContent
			float left
			overflow hidden
			transition(height, .25s, linear)
			height 0
		.tabShown
			height auto
			display block
		#contentLinks
			.box
				height 40px
			.boxLink
				font-size 1.3em
				line-height 1.8em
			.boxLinkTall
				height 60px
				font-size 1.8em
				line-height 2em
		.contentBoxes
			.box
				padding 5px
				h3
					text-align center
					font-size 1.8em
					margin-bottom 10px
				h4
					text-align center
					font-size 1.4em
					margin 5px 0
		#contentWeather
			.box
				height auto
		#contentSports
			.sportsList
				padding 10px
				width (180*3+3*2)px
				height auto
				text-align left
				.sportEvent
					padding-left 1.5em
					text-indent -1.5em
					margin 6px 0
					line-height .9em
					.sportTeam
						font-weight 600
					.sportLocation
						font-style italic
					.sportLocation:before
						content ("(")
					.sportLocation:after
						content (")")
					.sportTime
						font-variant small-caps
						font-size .8em
					.sportTv
						font-size .8em
						img
							vertical-align middle
						.showing
							font-variant small-caps
			.double
				width (180*2+3)px
			a.selected
				cursor default
		.contentFrame.tabShown
			height 500px
			border 3px solid #666
			background #b5b5b5 url("/img/qduke/loading.gif") no-repeat center center
		.contentFrame
			floaat left
			width (180*5+3*4)px
			iframe
				width 100%
				height 100%
				border none
				background white
			a.newWindow
				border 0 solid #666
				border-width 0 3px 3px 0
				position absolute
				display block
				top 0
				left 0
				width 20px
				height 20px
				background #eee url("/img/qduke/newwindow.png") no-repeat center center
	.rowAds
		a
			height 30px
			line-height 1.9em
			background #b5b5b5
	#footer, .promo
		color #666
		margin-top 20px
		margin-bottom 20px
	.promo
		a
			color #069
		a:hover
			color #09F
	p.bugs
		color #666
		font-size .7em
	.cols1
		width 180px
	.cols2
		width (180*2+3)px
	.cols3
		width (180*3+3*2)px
	.cols4
		width (180*4+3*3)px
	.cols5
		width (180*5+3*4)px
	.colsmargin
		width 3px