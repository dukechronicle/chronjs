body
	background-color #eee
	color white
	a:hover
		color #00B8FF
	#wrap
		width 980px
		margin 0px auto
	.box, .rowAds a
		cursor pointer
		background #666
		text-align center
		float left
		width 180px
		border 2px solid white
		margin 10px 10px 0 0
		position relative
		overflow hidden
		box-shadow 1px 1px 5px #999
	.rowHead
		.box
			background #069
			height 60px
			font-size 1.3em
			line-height 2.8em
		.boxLogo
			background #555
			font-size 2em
			line-height 1.7em
			em
				font-style italic
	.rowNews
		.box
			height 120px
			background black
			.img
				float left
				display inline
				opacity .2
			.caption
				position absolute
				bottom 0
				left 0
				width 100%
				background black
				opacity .9
				.txt
					font-size 1em
					line-height 1em
					margin 5px
		.boxChron
			background #069
			font-size 1.5em
			line-height 4.8em
	.rowSearch
		.box
			height 60px
		.boxSearch
			cursor text
			width (180*2 + 10)px
			background #b5b5b5
			input
				padding 0 0 0 8px
				height 100%
				width 100%
				border none
				font-size 25px
		.boxButton
			width (180*3+20)/3px
			font-size 1.3em
			line-height 2.8em
			background #069
	.rowLinks
		.box
			height 40px
		.boxLink
			font-size 1.3em
			line-height 1.8em
		.boxLinkTall
			height 60px
			font-size 1.8em
			line-height 2em
	.rowAds
		a
			height 30px
			line-height 1.7em
			background #b5b5b5