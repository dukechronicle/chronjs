	#tabFrame
		.tabContent
			float left
			display none
			margin 0
			padding 0
		.tabShown
			height auto
			display block
		.contentFrame
			width col5
			iframe
				width 100%
				height 100%
				border none
				background white
			a.newWindow
				border 0 solid qDGray
				border-width 0 col-margin col-margin 0
				position absolute
				display block
				top 0
				left 0
				width 20px
				height 20px
				background qBG url("/img/qduke/newwindow.png") no-repeat center center
		.contentFrame.tabShown
			height 500px
			margin-bottom 5px
			border col-margin solid qDGray
			background qLGray url("/img/qduke/loading.gif") no-repeat center center
		#contentLinks
			.box
				height 40px
			.boxLink
				font-size 1.3em
				line-height 2em
				@media only screen and (max-width: 590px) // if really narrow
					font-size 1.1em
					height 32px
			@media only screen and (min-width: 957px) // if wide
				.boxLinkTall
					height 60px
					font-size 1.8em
					line-height 2.3em
		#contentSports
			a.box
				padding 5px
				height 32px
			.scheduleBox
				float right
				padding 0 10px
				width col4
				min-height 732px
				text-align left
				font-size 1em
				text-height 1em
				table
					border-collapse collapse
					text-align left
					width 100%
					thead
						th
							padding 5px 3px 4px 1px
							font-size 1.1em
							border-bottom 2px solid qHover
					tbody
						td
							padding 5px 3px 4px 1px
							border-bottom 1px solid qLGray
						tr:last-child
							td
								border-bottom-width 0
						tr:hover
							background-color qHover
						td.sportOpponent
							max-width 200px
			a.selected
				cursor default
			@media only screen and (max-width: 773px) // if narrow
				.sportsList
					display none //TODO(rivkees) maybe change
			@media only screen and (max-width: 956px) // if 4 col (ipad)
				.scheduleBox
					width col3
			@media only screen and (max-width: 590px) // if really narrow
				.contentSports
					width 100%
				.scheduleBox
					width 99%
					font-size .9em
					tbody
						line-height 1.3em
	.rowAds
		a
			height 24px
			line-height 1.8em
			background qLGray
	#footer
		color qDGray
		margin-top 20px
		margin-bottom 20px
	.promo
		.left
			float left
			font-weight bold
		.right
			float right
			font-size .9em
