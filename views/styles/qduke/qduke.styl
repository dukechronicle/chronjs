		.boxStories
			@media only screen and (max-width: 773px) // if narrow
				:nth-child(4)
					display none
			@media only screen and (max-width: 590px) // if really narrow
				:nth-child(3)
					display none
			a.boxNews
				overflow hidden
				@media only screen and (max-width: 590px) // if really narrow
					img
						width 100%
						height auto
			a.box:hover:before, a.box:focus:before
				content ""
				display block
				position absolute
				top 0
				bottom 0
				left 0
				right 0
				opacity .6
				background qHover
			a:hover, a:focus
				.caption
					background rgba(0, 153, 255, .8)
		.box.breaking
			//border 3px solid rgba(200, 0, 0, .9);
			//box-shadow 1px 1px 5px #c80000;
			.captionTop
				background #c80000
		a.boxEmpty
			background qLGray url("/img/qduke/loading.gif") no-repeat center center
	.rowSearch
		.boxSearch
			height 59px
			cursor text
			width col3
			@media only screen and (max-width: 956px) // if 4 col (ipad)
				width col2
			@media only screen and (max-width: 773px) // if narrow
				width col3
			@media only screen and (max-width: 590px) // if really narrow
				width col2
				width 99%
			background qLGray url("/img/qduke/search.gif") no-repeat 10px center
			input
				padding 0 0 0 50px
				height 100%
				width 100%
				border none
				font-size 25px
				background qBlue
		.boxButton
			font-size 1.1em
			line-height 1.6em
			height 28px
			background qDGray
			@media only screen and (max-width: 956px) // if 4 col (ipad)
				width col1
			@media only screen and (max-width: 773px) // if narrow
				width col3in4
			@media only screen and (max-width: 590px) // if really narrow
				width col1
				width 49%
		.queryActive
			background qBlue
		.queryActive#GoogleSearchButton
			background qHover
		.boxButtons:hover .queryActive#GoogleSearchButton, .boxButtons .queryActive.searchInactive#GoogleSearchButton
			background qBlue
		#GoogleSearchButton:hover, #GoogleSearchButton:focus
			background qHover !important
	.menu
		margin-top 21px
		color qDGray
		.box
			font-size 1.2em
			line-height 1.4em
			background none
			box-shadow none
			margin-right 0
			height 30px
			border col-margin solid qLGray
			transition(border-bottom-color, .25s, linear)
		span.spacer
			height 30px
			float left
			border-bottom col-margin solid qLGray
		span.adSpacer
			width col4
			@media only screen and (max-width: 956px) // if 4 col (ipad)
				width col3
			@media only screen and (max-width: 773px) // if narrow
				width col2
			@media only screen and (max-width: 590px) // if really narrow
				width col1
				width 49%
		.box.selectedTab
			border-bottom qBG
			color qDGray
			background none
			cursor default
		a.box.selectedTab:hover//, .dukealert-alertLink:hover
			background none
			color qDGray
			cursor default
