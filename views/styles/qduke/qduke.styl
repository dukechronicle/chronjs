@import '../mixins'

col-margin = 3px
col1 = 180px
col2 = col1*2 + col-margin
col3 = col1*3 + col-margin*2
col4 = col1*4 + col-margin*3
col5 = col1*5 + col-margin*4
col3in4 = 134.25px

qBG = #eee
qHover = #09F
qBlue = #069
qLGray = #888
qDGray = #444
qLogoGray = #555

//916 old 916+42 = 958
//915 old 915+42 = 957
// 549 old 549+42=591
body, html
	overflow-x hidden
body
	background-color qBG
	color white
	font-family 'PT Sans', sans-serif
	a:hover, a:focus, a.selected
		color qHover
	a.box, .rowAds a, a.dukealert-alertLink
		cursor pointer
	a.box:hover, a.box:focus, .rowAds a:hover, .rowAds a:focus, a.dukealert-alertLink:hover, a.dukealert-alertLink:focus, a.selected
		background qHover
		color white
	#wrap
		width col5 + col-margin +21*2
		margin 21px auto 0 auto
		padding 0 21px
		@media only screen and (max-width: 956px) // if 4 col (ipad)
			width col4 + col-margin +21*2
		@media only screen and (max-width: 773px) // if narrow
			width col3 + col-margin +21*2
		@media only screen and (max-width: 590px) // if really narrow
			width 100%
			padding 0 10px
			margin-top 10px
	.box, .rowAds a, .dukealert-alertLink, .dukealert-description
		background qDGray
		text-align center
		float left
		width col1
		margin 0 col-margin col-margin 0
		@media only screen and (max-width: 590px) // if really narrow
			width 49%
			margin 0 1% 1% 0
		position relative
		overflow hidden
		box-shadow 1px 1px 5px #ddd
	.duke-alert
		.dukealert-alertLink
			height 60px
			font-size 1.3em
			line-height 2.8em
			padding 0 25px
			:before
				content " DukeALERT "
		.dukealert-standardHeadline
			display none
		.dukealert-description
			height 60px
			font-size .9em
			line-height 1em
			padding 8px
			width col4
			@media only screen and (max-width: 956px) // if 4 col (ipad)
				width col3
			@media only screen and (max-width: 773px) // if narrow
				width col2
			@media only screen and (max-width: 590px) // if really narrow
				//width col1
				width 100%
			a
				color qHover
	.duke-alert-lev1
		.dukealert-alertLink
			background #AD1E17
	.duke-alert-lev2
		.dukealert-alertLink
			background #F0A21E
	.duke-alert-0
		display none
	.rowHead
		@media only screen and (min-width: 957px) // if wide
			height 43px
			position relative
		.box
			height 60px
			background qBlue
			font-size 1.3em
			line-height 2.8em
		.boxLogos
			float left
			width col1 + col-margin
			.box
				float left
				@media only screen and (min-width: 957px) // if wide
					height 80px
			@media only screen and (max-width: 956px) // if 4 col (ipad)
				width 100%
				.boxLogo
					width col2
				.boxChron
					line-height 2.8em
					width col2 // 774
			@media only screen and (max-width: 773px) // if narrow
				.boxLogo
					width col2 // 591
				.boxChron
					width col1
			@media only screen and (max-width: 590px) // if really narrow
				.box
					width 49%
		.boxLogo
			background qLogoGray
			font-size 2em
			line-height 1.7em
			h1
				background url("/img/qduke/qDukeLogo.png") no-repeat center center
				// background rgba(0,0,0,0) url("/img/qduke/qDukeLogo.svg") no-repeat center center
				width 100%
				height 100%
				text-indent 100%
				white-space nowrap
				overflow hidden
		.boxChron
			background qBlue
			font-size 1.5em
			line-height 3.5em
		#boxStatus
			.box
				@media only screen and (min-width: 957px) // if wide
					height 40px
				@media only screen and (max-width: 956px) // if 4 col (ipad)
					height 57px
				font-size .9em
				line-height 1.2em
				padding 5px
				h3
					text-align center
					font-size 1.1em
					margin-bottom 5px
				p.bottomRightCaption
					position absolute
					right 0
					bottom 0
					padding 5px
				.strong
					font-weight bold
			.StatusSportScore
				text-align left
				.StatusTeam
					width 75%
					float left
					.StatusScore
						float right
				.StatusTime
					font-size .8em
					width 25%
					float right
					text-align right
			.StatusTweet
				text-align left
			.StatusWeather
				img
					float left
			@media only screen and (min-width: 957px) // if wide
				position absolute
				margin-left 183px
				z-index 10
				.box:hover
					height auto
					box-shadow 1px 1px 5px #444
			@media only screen and (max-width: 773px) // if narrow
				:nth-child(4)
					display none
			@media only screen and (max-width: 590px) // if really narrow
				:nth-child(3)
					display none
	.rowNews
		.box
			height 120px
			background black
			img
				float left
				display inline
				width 186px
				height 133px
			.caption
				position absolute
				bottom 0
				left 0
				width 100%
				background rgba(0, 0, 0, .8)
				.txt
					font-size .9em
					line-height 1.1em
					margin 5px
			@media only screen and (min-width: 957px) // if wide
				.caption
					height 35px
				&:hover .caption
					height auto
			.captionTop
				height auto
				top 0
				bottom auto
				width auto
				opacity .95
				background qBlue
				border-radius 0 0 4px 0
