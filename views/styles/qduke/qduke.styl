@import '../mixins'

col-margin = 3px
col1 = 180px
col2 = col1*2 + col-margin
col3 = col1*3 + col-margin*2
col4 = col1*4 + col-margin*3
col5 = col1*5 + col-margin*4
col3in4 = 134.25px

qBlue = #069
qLGray = #b5b5b5
qDGray = #666

body
	background-color #eee
	color white
	font-family 'PT Sans', sans-serif
	a:hover, a.selected
		color #09F
	a.box, .rowAds a, a.dukealert-alertLink
		cursor pointer
	a.box:hover, .rowAds a:hover, a.dukealert-alertLink:hover, a.selected
		background #09F
		color white
	#wrap
		width col5 + col-margin
		margin 20px auto 0 auto
		@media all and (max-device-width: 915px) // if narrow
			width col3 + col-margin
	.box, .rowAds a, .dukealert-alertLink, .dukealert-description
		background qDGray
		text-align center
		float left
		width col1
		margin 0 col-margin col-margin 0
		position relative
		overflow hidden
		box-shadow 1px 1px 5px #ccc
	.duke-alert
		.dukealert-alertLink
			height 60px
			font-size 1.3em
			line-height 2.8em
			padding 0 25px
			:before
				content " DukeALERT "
		.dukealert-standardHeadline
			display none
		.dukealert-description
			height 60px
			font-size .9em
			line-height 1em
			padding 8px
			width col4
			@media all and (max-device-width: 915px) // if narrow
				width col2
			a
				color #09F
	.duke-alert-lev1
		.dukealert-alertLink
			background #AD1E17
	.duke-alert-lev2
		.dukealert-alertLink
			background #F0A21E
	.duke-alert-0
		display none
	.rowHead
		.box
			background qBlue
			height 60px
			font-size 1.3em
			line-height 2.8em
			@media all and (max-device-width: 915px) // if narrow
				width col3in4
		.boxLogo
			background #555
			font-size 2em
			line-height 1.7em
			em
				font-style italic
			@media all and (max-device-width: 915px) // if narrow
				width col3
		#boxStatus
			.box
				font-size .9em
				line-height 1em
				padding 5px
				h3
					text-align center
					font-size 1.1em
					margin-bottom 5px
				img
					position absolute
					bottom -43px
					right -57px
					height 100px
	.rowNews
		.box
			height 120px
			background black
			img
				float left
				display inline
				width 186px
				height 133px
			.caption
				position absolute
				bottom 0
				left 0
				width 100%
				background black
				opacity .8
				.txt
					font-size .9em
					line-height 1em
					margin 5px
			.captionTop
				top 0
				bottom auto
				width auto
				opacity .95
				background qBlue
				border-radius 0 0 4px 0
		.boxStories
			@media all and (max-device-width: 915px) // if narrow
				:nth-child(4)
					display none
			a.box:hover:before
				content ""
				display block
				position absolute
				top 0
				bottom 0
				left 0
				right 0
				opacity .7
				background #09F
			a:hover
				.caption
					background #09F
		.box.breaking
			//border 3px solid rgba(200, 0, 0, .9);
			//box-shadow 1px 1px 5px #c80000;
			.captionTop
				background #c80000
		.boxChron
			background qBlue
			font-size 1.5em
			line-height 4.8em
			@media all and (max-device-width: 915px) // if narrow
				width col3
				height 60px
				font-size 1.3em
				line-height 2.8em
		a.boxEmpty
			background qLGray url("/img/qduke/loading.gif") no-repeat center center
	.rowSearch
		.boxSearch
			height 59px
			cursor text
			width col3
			background qLGray url("/img/qduke/search.gif") no-repeat 10px center
			input
				padding 0 0 0 50px
				height 100%
				width 100%
				border none
				font-size 25px
				background qBlue
		.boxButton
			font-size 1.1em
			line-height 1.6em
			height 28px
			background qBlue
			@media all and (max-device-width: 915px) // if narrow
				width col3in4
	.menu
		color qDGray
		.box
			font-size 1.2em
			line-height 1.4em
			background none
			box-shadow none
			margin-right 0
			height 30px
			border col-margin solid qLGray
		span.spacer
			height 30px
			float left
			border-bottom col-margin solid qLGray
		span.adSpacer
			width col4
			@media all and (max-device-width: 915px) // if narrow
				width col2
		.box.selectedTab
			border-bottom none
			color qDGray
			background none
			cursor default
		a.box.selectedTab:hover//, .dukealert-alertLink:hover
			background none
			color qDGray
			cursor default
	.tabMenu
		@media all and (max-device-width: 915px) // if narrow
			display none
			width 0
			height 0
			border 0
			padding 0
			margin 0
	#tabFrame
		.tabContent
			float left
			overflow hidden
			transition(height, .25s, linear)
			height 0
		.tabShown
			height auto
			display block
		#contentLinks
			.box
				height 40px
			.boxLink
				font-size 1.3em
				line-height 1.8em
			@media all and (min-device-width: 916px) // if wide
				.boxLinkTall
					height 60px
					font-size 1.8em
					line-height 2em
		.contentBoxes
			.box
				padding 5px
				h3
					text-align center
					font-size 1.8em
					margin-bottom 10px
				h4
					text-align center
					font-size 1.4em
					margin 5px 0
		#contentSports
			.sportsList
				padding 10px
				width col3
				height auto
				text-align left
				.sportEvent
					padding-left 1.5em
					text-indent -1.5em
					margin 6px 0
					line-height .9em
					.sportTeam
						font-weight 600
					.sportLocation
						font-style italic
					.sportLocation:before
						content ("(")
					.sportLocation:after
						content (")")
					.sportTime
						font-variant small-caps
						font-size .8em
					.sportTv
						font-size .8em
						img
							vertical-align middle
						.showing
							font-variant small-caps
			.double
				width col2
			a.selected
				cursor default
		.contentFrame.tabShown
			height 500px
			border col-margin solid qDGray
			background qLGray url("/img/qduke/loading.gif") no-repeat center center
		.contentFrame
			floaat left
			width col5
			iframe
				width 100%
				height 100%
				border none
				background white
			a.newWindow
				border 0 solid qDGray
				border-width 0 col-margin col-margin 0
				position absolute
				display block
				top 0
				left 0
				width 20px
				height 20px
				background #eee url("/img/qduke/newwindow.png") no-repeat center center
	.rowAds
		a
			height 30px
			line-height 1.9em
			background qLGray
	#footer, .promo
		color qDGray
		margin-top 20px
		margin-bottom 20px
	.promo
		a
			color qBlue
		a:hover
			color #09F
	p.bugs
		color qDGray
		font-size .7em
	.cols1
		width col1
	.cols2
		width col2
	.cols3
		width col3
	.cols4
		width col4
	.cols5
		width col5
	.colsmargin
		width col-margin