@import '../../mixins'

block-height = 250px

.block-row
    img
        border-radius 4px
        box-shadow 0px 0px 4px #999
        transition box-shadow 0.25s linear
        width 100%
    a.hover:hover img
        box-shadow 0px 0px 4px black

    .content-container
        height block-height
        padding-left 0px
        padding-right 0px

        a.hover
            height 100%
            margin-bottom -9px
            padding-bottom 9px

            .title
                height 50px
            
            .teaser
                line-height 1.2em
        
            h3.title
                font-size 1.6em
                line-height 1.2em
        
            h4.title
                font-size 1.1em
                line-height 1.2em

    .content-container:first-child
        padding-left 10px

    .content-container:last-child
        padding-right 10px

.multimedia-bar
    .element
        margin-right 8px
    .element:last-child
        margin-right 0px