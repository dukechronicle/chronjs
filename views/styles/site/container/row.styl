@import '../../mixins'

block-height = 250px

.row
    img
        box-shadow 0px 0px 4px #999
        transition box-shadow 0.25s linear
    a.hover:hover img
        box-shadow 0px 0px 4px black

    .content-container
        height block-height
        padding-left 0px
        padding-right 0px

        .row-story
            overflow hidden

        a.hover
            height 100%
            margin-bottom -9px
            padding-bottom 9px

            .title
                height 50px
            
            .teaser
                line-height 1.2em
        
            h3.title
                font-size 1.6em
                line-height 1.2em
        
            h4.title
                font-size 1.1em
                line-height 1.2em

    .content-container:first-child
        padding-left 10px

    .content-container:last-child
        padding-right 10px

.multimedia
    .rounded
        padding 6px
    .element
        float left

.span-12 > .multimedia
    .element
        margin-right 10px
    .element:last-child
        margin-right 0px

.span-8 > .multimedia
    .element
        margin-right 7px
    .element:last-child
        margin-right 0px
