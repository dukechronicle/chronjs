.story-list
    .rounded
        overflow hidden

    .list-story
        margin-bottom 1.4em

        .breaking-label
            background-color red
            color white
            font-size .65em
            vertical-align top
            margin 0px 10px
            padding 0px 2px
            border-radius 4px
    
    .list-story:last-child
        margin-bottom 0em

    ol
        margin 0px
        li
            font-size 1em

.breaking
    .rounded
        box-shadow rgba(200,0,0,0.6) 0px 1px 3px

.title-small
    .list-story
        margin-bottom .7em

.title-medium
    .list-story
        margin-bottom 1em