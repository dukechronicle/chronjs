.story-list-subhead
    .title
        margin-bottom 0px

.story-list
    .list-story
        margin-bottom .7em
    
        h5.title
            font-size 1.1em
            line-height 100%
    
        .subhead
            font-family "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
            font-size 0.7em
            padding-top 0px
            text-transform uppercase
            margin-bottom 5px
    
            span
                padding-left 5px
                margin-left 5px
                border-left 1px solid #888
    
           .subhead span:first-child
                padding-left 0px
                margin-left 0px
                border-left 0px
    
    .list-story:last-child
        margin-bottom 0em

.story-list.story-list-numbered
    ol
        margin 0px
        li
            font-size 1em

.story-list.breaking
    .rounded
        box-shadow rgba(200,0,0,0.6) 0px 1px 3px

    .label
        background-color red
        color white
        font-size .65em
        vertical-align top
        margin 0px 10px
        padding 0px 2px
        border-radius 4px
