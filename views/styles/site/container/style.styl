@import '../../mixins'

link-color = #36c
corner-radius = 4px
border-color-grey = #DDD
highlight-color = #4D90F0


a.highlight-left:hover, a.highlight-left.selected
    border-left-color highlight-color
a.highlight-right:hover, a.highlight-right.selected
    border-right-color highlight-color
a.highlight-bottom
    border-bottom 1px solid transparent
a.highlight-bottom:hover, a.highlight-bottom.selected
    border-bottom-color highlight-color
a.highlight-top
    border-top 1px solid transparent
a.highlight-top:hover, a.highlight-top.selected
    border-top-color #4D90F0

.rounded
    box-sizing border-box
    border-radius corner-radius
    black-box-shadow 0.4 0px 1px 3px
    background-color white
    background-linear-gradient bottom, whiteSmoke 0%, white 33%
    margin-bottom 20px

.content-container
    padding 8px
    box-sizing border-box

    h1, h2, h3, h4, h5
        color black
        margin-bottom 3px

    p, span, li
        color #444
        font-size 1.1em
        margin-bottom 0px

    .highlight-left
        margin-left -9px
        padding-left 9px
    .highlight-right
        padding-right 9px
        margin-right -9px

.image-container
    padding 3px

    img
        border-radius corner-radius
        display block

.lighten
    img
        opacity 0.8
        transition opacity 0.25s linear

    img:hover
        opacity 1        

.vertical-container
    transform rotate(-90deg)
    transform-origin 0px 1em
    white-space nowrap
    display block
    position relative

    .vertical
        position absolute
        visibility hidden
        color #444
        font-size 1em
        line-height 100%
        letter-spacing 1px
        text-shadow 0px 1px 1px white
        text-transform uppercase
