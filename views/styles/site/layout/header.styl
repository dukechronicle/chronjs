@import '../../mixins'
@import '../variables'

#super-header
    margin-top 8px
    color #666

    .date

        font-size 1.2em
        padding-right 10px
    .advertising-links
        margin-left 10px
        a 
            margin-right 5px
            color #666
        a:last-child
            margin-right 0px

    .icons
        margin-left 2px
        a img
            width 15px
            height 15px
            vertical-align bottom
            transition opacity, .25s linear
            padding 0px 2px


header
    margin-top 5px
    border-radius corner-radius
    background-color bar-color
    box-shadow rgba(0,0,0,0.40) 0 1px 3px
    color #EEE
    overflow hidden
  

    #header-top
        margin 5px 5px 5px 20px

        border-bottom 1px solid #EEE

    #home-link
        display inline-block
        position relative
        margin-left: -12px;

        

        #header-overlay
           
            position absolute
            z-index 1
            left 50px
            top -37px

        h1, h2, h3
           
            line-height 100%
            text-shadow 0 1px 3px rgba(0,0,0,.4);
            margin 0px
            color #EEE

        .brand
            font-family ambroise-std
            font-weight lighter
            font-size 5.25em
            display inline
            text-align left
            margin-left 8px

        .tagline
            font-size 1.4 em
            font-family proxima-nova-sc-osf-ext-cond
            letter-spacing 1px
            display inline
            text-align left
            margin-left 10px


    #header-bottom
        nav
            position relative
            z-index 2
            vertical-align bottom
            padding-top 7px
            letter-spacing 10px


            a
                display inline-block
                h2
                    display inline-block
                    margin 0px
                    font-weight bold
                    font-size 1.3em
                    text-shadow 0 1px 2px rgba(0,0,0,.4);
                    letter-spacing 1px
                    text-transform uppercase
                    color #EEE
                    border-bottom 1px solid transparent
                    transition(border-bottom-color, .25s, linear)
                    padding 0px 11px

            a:hover h2, a.active h2
                border-bottom-color #DDD

    #search-box
        box-sizing border-box
        padding 2px 4px
        margin-top 4px 

        input
            background #fff url(/img/search-button.png) no-repeat
            background-position 2px 2px
            border-radius 10px
            border 1px inset
            font-size 12px
            padding-left 20px
            box-sizing border-box
            width 100%
