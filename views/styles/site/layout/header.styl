header
    background-color #069
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
    box-shadow rgba(0,0,0,0.40) 0 1px 3px
    color #EEE
  
    #header-overlay
        position absolute
        z-index 1
        height 100%

    #header-top

        .content
            color #EEE

            .brand
                text-align center
                font-family didot
                font-size 3.7em
                font-weight normal
                letter-spacing -1px
                line-height 100%
                text-shadow 0 1px 3px rgba(0,0,0,.4);
            .tagline
                text-shadow 0 1px 2px rgba(0,0,0,.4);
                line-height 100%
                font-style italic
                text-align center
            .date
                text-shadow 0 1px 2px rgba(0,0,0,.4);
        
        .links
            .icons
                a img
                    opacity .7
                    width 20px
                    height 20px
                    transition opacity, .25s linear
                    padding 5px 3px 0px 3px
                a:hover img
                    opacity 1
                a:first-child img
                    padding-left 0px
                a:last-child img
                    padding-right 0px

            .advertising-links
                padding-top 2px
                a
                    text-shadow 0 1px 2px rgba(0,0,0,.4);
                    font-size 1em
                    color #EEE
                    line-height 100%

        .leaderboard
            img
                border-bottom-left-radius 5px
                display block
                box-shadow 0px 0px 3px #CCC
                opacity 0.8
                transition opacity 0.25s linear
        
            a:hover img
                opacity 1

    #header-bottom
        nav
            z-index 2
            vertical-align bottom
            padding-top 7px

            h2
                display inline-block
                vertical-align bottom

                a
                    font-weight 600
                    text-shadow 0 1px 2px rgba(0,0,0,.4);
                    letter-spacing 1px
                    font-size 1em
                    text-transform uppercase
                    color #EEE
                    border-bottom 1px solid transparent
                    transition(border-bottom-color, .25s, linear)
                    padding 0px 10px

                a:hover, a.active
                    border-bottom-color #DDD

    #search-box
        box-sizing border-box
        padding 2px 4px

        input
            background #fff url('/images/search-button.png') no-repeat
            background-position 2px 1px
            border-radius 10px
            border 1px inset
            font-size 12px
            padding-left 20px
            width 100%
