@import '../../mixins'

header
    background-color #069
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
    box-shadow rgba(0,0,0,0.40) 0 1px 3px
    color #EEE

    #header-top

        .content
            position relative
            color #EEE

            #header-overlay
                position absolute
                z-index 1
                left 50px
                top -37px

            .brand
                text-align right
                font-family didot
                font-size 4em
                letter-spacing -1px
                line-height 100%
                text-shadow 0 1px 3px rgba(0,0,0,.4);
                margin 0px
                color #EEE
            .tagline
                text-shadow 0 1px 2px rgba(0,0,0,.4);
                line-height 100%
                font-style italic
                text-align center
                font-size 1.3em
                margin 0px
            .date
                text-align right
                text-shadow 0 1px 2px rgba(0,0,0,.4);
                margin 0px
        
        .leaderboard
            .openx-ad
                height 65px
                img
                    border-bottom-left-radius 5px
                    display block
                    box-shadow 0px 0px 3px #CCC
                    opacity 0.8
                    transition opacity 0.25s linear
                    margin-bottom 5px
                    float right
        
            a:hover img
                opacity 1

            .icons
                a img
                    opacity .7
                    width 15px
                    height 15px
                    transition opacity, .25s linear
                    padding 0px 2px
                a:hover img
                    opacity 1

            .advertising-links
                a
                    padding 0px 5px
                    text-shadow 0 1px 2px rgba(0,0,0,.4);
                    font-size 1em
                    color #EEE
                    line-height 100%
                    vertical-align top

    #header-bottom
        nav
            position relative
            z-index 2
            vertical-align bottom
            padding-top 7px

            a
                display inline-block
                h2
                    display inline
                    font-weight bold
                    font-size 1.2em
                    text-shadow 0 1px 2px rgba(0,0,0,.4);
                    letter-spacing 1px
                    text-transform uppercase
                    color #EEE
                    border-bottom 1px solid transparent
                    transition(border-bottom-color, .25s, linear)
                    padding 0px 10px

            a:hover h2, a.active h2
                border-bottom-color #DDD

    #search-box
        box-sizing border-box
        padding 2px 4px

        input
            background #fff url('/images/search-button.png') no-repeat
            background-position 2px 1px
            border-radius 10px
            border 1px inset
            font-size 12px
            padding-left 20px
            box-sizing border-box
            width 100%
