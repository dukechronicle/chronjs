@import '../../mixins'

section > .nav
    position relative
    z-index 2
    clear both
    h2, h3
        float left
        a
            letter-spacing 1px
            text-shadow 0px 1px 0px white
            //border-bottom 1px solid transparent
            font-size 0.7em
            text-transform uppercase
            color #333
            display block
            padding-left 15px
            padding-right 11px
            padding-bottom 1px
            margin-bottom 10px
            margin-top -16px
            transition color .25s linear
        a:hover, a.selected
            color #36c

#article
    .medium-rectangle .rounded-hover
        padding 3px

    a.edit
        float right

    h1
        font-size 1.7em
        text-shadow 0px 1px 1px white
        line-height 1.3em

    img.article
        width 580px
        height 358px
        border-radius 4px
        margin-top 15px
        box-shadow 0 0 4px #999

    .metadata
        color #777
        font-size 0.8em
        margin 1em 0em

    .social-media
        width 130px
        font-size 0.8em
        float right
        margin-left 1.5em
        margin-top 0px
        height 121px
        > div
            margin-bottom 0.3em
        > .facebook
            height 21px
        .comments a
            background-image url('http://d2sug25c5hnh7r.cloudfront.net/images/icons/article_comment.gif')
            background-repeat no-repeat
            background-position 0px 2px
            padding 0 0 3px 20px
            color black
        .print a
            background-image url('http://d2sug25c5hnh7r.cloudfront.net/images/icons/article_print.gif')
            background-repeat no-repeat
            background-position 0 2px
            padding 0 0 3px 20px
            color black
        .print
            padding-bottom 3px


    .content
        width 580px

        float left
        padding 0.7em 1.5em 0.6em 1.5em
        background white

        .photo-credit
            float right
            color #777
            font-size 0.8em

        .photo-caption
            color #555
            font-size 0.8em
            font-style italic

        .article-body
            p
                color #333
                margin-bottom 1em
                font-size 0.95em
                line-height 1.6em

                object, img
                    float left
                    margin-right 20px


                object.no-float, img.no-float
                    float none
                    margin-right 0px

    .sidebar
        float right

        .rounded
            width 300px


    #disqus_thread
        float left
        margin-top 2em
        width 580px
        padding 0.3em 1.5em 0em 1.5em

        #dsq-global-toolbar
            position relative
            z-index 3

        #dsq-content
            font-size 0.9em
            #dsq-new-post
                margin-top -40px
                margin-bottom 10px
                h3
                    display none
            .dsq-item-trackback
                display none
            .dsq-request-user-logout
                display none
            .dsq-request-user-info td a,
            .dsq-request-user-stats span.dsq-request-user-stat big
                font-weight normal

        #dsq-content.dsq-mobile
            background transparent
            #dsq-logo
                display none
            #dsq-new-post
                margin-top 0px
                margin-bottom 0px
                h3
                    display block
            #dsq-comments
                background transparent
                .dsq-comment:last-child
                    border none

#social-share
    height 22px
    width 140px
    position relative
    display none
    vertical-align text-bottom
    position fixed !important
    bottom 0
    right 20px
    z-index 999
    color #333
    border 1px solid rgba(29, 49, 91, .3)
    border-bottom none
    border-radius 1px 1px 0 0
    box-shadow 0 1px 1px rgba(0, 0, 0, .3)
    background #EBEEF4
    font-family "lucida grande",tahoma,verdana,arial,sans-serif
    font-size 11px
    .share-button
        display block
        height 16px
        width 104px
        line-height 15px
        padding 3px 5px
        float left
        border-right 1px solid rgba(29, 49, 91, 0.30)
    .activity-button
        float left
        display block
        height 24px
        width 25px
    .activities
        border 1px solid rgba(29, 49, 91, 0.30)
        padding 7px 0px 7px 10px
        position absolute
        bottom 100%
        width 288px
        left -159px
        background white
        .url
            padding-right 8px
            width 264px
        h4
            margin-bottom 6px
        tr td
            padding-top 5px
        tr.first td
            padding-top 0px
    .activity-icon
        padding 3px
        padding-left 5px

    a
        color #333

    .activities
        display none
