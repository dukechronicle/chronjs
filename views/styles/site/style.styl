link-color = #36c
text-color = #333
bg-color = #F5F6F7
bg-top-color = #E6E6E8
header-height = 70px

input, textarea, select
    font-family inherit

@font-face
    font-family 'didot'
    src url('/css/fonts/didot.eot')
    src local('â˜º'), url('/css/fonts/didot.woff') format('woff'), url('/css/fonts/didot.ttf') format('truetype'), url('/css/fonts/didot.svg') format('svg')
    font-weight normal
    font-style normal

.nospace
    margin-bottom 0px

/* fixes extra space under embeds */
iframe, object
    display block

article, aside, details, figcaption, figure, footer, header, hgroup, nav, section
    display block
audio, canvas, video
    display inline-block
    *display inline
    *zoom 1
audio:not([controls])
    display none
[hidden]
    display none

html, body
    width 100%
    height 100%
    background-color bg-color
    background-linear-gradient top, bg-top-color, bg-color
    background-repeat no-repeat

body
    font-family skolar, "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif

    h1, h2, h3, h4, h5, h6
        font-family skolar, Georgia,"Century Schoolbook","Times New Roman",Times,serif

    a
        text-decoration none
        color link-color

    a.hover
        display block
        border-right 1px solid transparent
        border-left 1px solid transparent
        transition border-color .25s linear
    
        h1, h2, h3, h4, h5, p
            transition color .25s linear
    
    a.hover:hover, a.hover.selected
        h1, h2, h3, h4
            color link-color

    section
        margin-top 20px
