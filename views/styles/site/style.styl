link-color = #36c
text-color = #333
bg-color = #F5F6F7
bg-top-color = #E6E6E8
header-height = 70px

em
    font-style italic

strong
    font-weight bold

li
    list-style none

input, textarea, select
    font-family inherit

@font-face
    font-family 'didot'
    src url('/css/fonts/didot.eot')
    src local('â˜º'), url('/css/fonts/didot.woff') format('woff'), url('/css/fonts/didot.ttf') format('truetype'), url('/css/fonts/didot.svg') format('svg')
    font-weight normal
    font-style normal

/* For modern browsers */
.clearfix:before, .clearfix:after
    content ""
    display table

.clearfix:after
    clear both

/* For IE 6/7 (trigger hasLayout) */
.clearfix
    zoom 1

.left
    float left

.right
    float right

/* fixes extra space under embeds */
iframe, object
    display block

article, aside, details, figcaption, figure, footer, header, hgroup, nav, section
    display block
audio, canvas, video
    display inline-block
    *display inline
    *zoom 1
audio:not([controls])
    display none
[hidden]
    display none

html, body
    width 100%
    height 100%
    background-color bg-color
    background-linear-gradient top, bg-top-color, bg-color
    background-repeat no-repeat

body
    font-family skolar, "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif

    h1, h2, h3, h4, h5, h6
        font-family skolar, Georgia,"Century Schoolbook","Times New Roman",Times,serif

    a
        text-decoration none
        color link-color
            
    #shell
        margin 0px auto
        width 972px
    
    header, section, footer
        width 972px

    section
        margin-top 20px

.container
    margin-bottom 20px

.clear-both
    clear both

span.timestamp
    color #003366
    font-size .5em
    display block

#search-box
    position absolute
    padding-right 7px
    top header-height - 4
    right 0px
    input
        background #fff url('/images/search-button.png') no-repeat
        background-position 2px 1px
        border-radius 10px
        border 1px inset
        width 120px
        font-size 12px
        padding-left 20px


.leaderboard
    float right
    margin-top 1px
    margin-bottom 3px
    padding-right 7px
    //border-left 1px solid #ddd


    img
        border-radius 5px
        display block
        box-shadow 0px 0px 3px #CCC
        opacity 0.8
        transition opacity 0.25s linear

    a:hover img
        opacity 1
header
    .content
        width 490px
        float left
        position relative
        z-index 0
        padding-left 7px
        
        .announcements
            display none
            color #666
            position absolute
            text-shadow 0 1px 0 white
            line-height 1em
            a
                text-align left
                margin-bottom 3px
                font-size 0.7em
                text-transform uppercase
                letter-spacing 1px
                padding-top 4px
                color #333
            a:hover
                color #36C
            p
                font-size 0.7em
    #header-bottom
        .advertising-links
            margin-top -2px
            position relative
            top -18px
            left -145px
            z-index 6
            a
                text-shadow 0 1px 2px rgba(0,0,0,.4);
                font-size 0.75em
                color white
                float left
                margin-right 8px



footer
