@import 'variables'
@import '../mixins'


input, textarea, select
    font-family inherit

.nospace
    margin-bottom 0px

/* fixes extra space under embeds */
iframe, object
    display block

article, aside, details, figcaption, figure, footer, header, hgroup, nav, section
    display block
audio, canvas, video
    display inline-block
    *display inline
    *zoom 1
audio:not([controls])
    display none
[hidden]
    display none

html, body
    width 100%
    height 100%
    background-color background-color
    background-linear-gradient top, background-top-color, background-color
    background-repeat no-repeat

body
    font-family skolar, "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif

    h1, h2, h3, h4, h5, h6
        font-family skolar, Georgia,"Century Schoolbook","Times New Roman",Times,serif
        font-weight normal

    section
        margin-top 20px

    a
        text-decoration none
        color link-color

    a.hover
        display block
        transition border-color .25s linear

        h1, h2, h3, h4, h5, h6, p
            transition color .25s linear

    a.hover:hover, a.hover.selected
        h1, h2, h3, h4, h5, h6
            color link-color

    a.highlight-left
        border-left 1px solid transparent
    a.highlight-left:hover, a.highlight-left.selected
        border-left-color highlight-color
    a.highlight-right
        border-right 1px solid transparent
    a.highlight-right:hover, a.highlight-right.selected
        border-right-color highlight-color
    a.highlight-bottom
        border-bottom 1px solid transparent
    a.highlight-bottom:hover, a.highlight-bottom.selected
        border-bottom-color highlight-color
    a.highlight-top
        border-top 1px solid transparent
    a.highlight-top:hover, a.highlight-top.selected
        border-top-color highlight-color

    #loadImage
        height 100px
        display block
        background-image url(/img/loading.gif)
        background-position center
        background-repeat no-repeat


    /***** Image sizes *****/

    img.fit-image
        width 100%

    img.large-rect
        width 636px
        height 393px

    img.thumb-rect
        width 186px
        height 133px

    img.thumb-rect-large
        width 276px
        height 165px

    img.thumb-square-medium
        width 200px
        height 200px

    img.thumb-wide
        width 300px
        height 120px

    img.staff-headshot
        width 300px
        height 225px
